@model List<Product>

<h1>Danh sách sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Tạo mới</a>


</p>


<table class="table">
    <thead>
        <tr>
            <th>
                Tên
            </th>
            <th>
                Giá
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

